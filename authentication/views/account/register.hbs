<div class="form register-form">
  <h1>Register</h1>
  <hr>
  <form action="/account/register" method="post">
    <label for="username">Username:<input type="text" name="username" id="username"></label>
    <label for="password">Password: <input type="password" name="password" id="password"></label>
    <label for="confirm-password">Confirm Password: <input type="password" name="confirm-password"
        id="confirm-password"></label>
    <label for="email">Email:<input type="text" name="email" id="email"></label>
    <input type="submit" value="Submit">
  </form>
  <small>Already have an account? <a href="/account/login">Sign in</a></small>
</div>